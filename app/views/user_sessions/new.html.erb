
<h1>Login</h1>

<div>
  <% form_for @user_session do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </p>

    <p>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </p>

    <p>
      <%= f.submit "Login" %>
    </p>
    <% end %>
    <p>
      <%= link_to "Forgot password?", new_password_reset_path  %>
    </p>
  </div>