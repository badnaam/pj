<% semantic_form_for @merchant do |form| %>
  <%#= form.error_messages %>
  <% form.inputs do %>
    <%= form.input :name, :label => "Listing name" %>
    <%= form.input :description, :label => 'Description', :as => :text, :hint => "Maximum 255 words" %>
    <%= form.input :merchant_category, :as => :radio, :label_method => :category_name %>
    <%= form.input :main_contact_name, :label => 'Main contact name' , :hint => "Person who will be contacted for validation
    before listing is active",  :input_html => {:style => "width:50%"}%>
    <%= form.input :main_contact_number, :label => 'Main contact number', :input_html => {:style => "width:30%"}, :hint => "Main contact's phone"%>
    <%= form.input :website, :label => "Your Website", :input_html => {:size => 100} %>
    <%= form.input :phone, :input_html => {:size => 15} %>
  <% end %>
  <% form.inputs :for => :address, :name => "Address"  do |af|  %>
    <%= af.input :street1, :input_html => {:style => "width:50%"}%>
    <%= af.input :street2 , :input_html => {:style => "width:50%"}%>
    <%= af.input :city , :input_html => {:style => "width:30%"}%>
    <%= af.input :state, :as => :select, :collection => Address::STATES%>
    <%= af.input :zip , :input_html => {:style => "width:10%"}%>
  <% end  %>
  <%= form.buttons :input_html => {:class => 'btn'}%>
<% end  %>