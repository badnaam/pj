<% title "Addresses" %>

<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', addresses_path %></li>
      <li><%= link_to 'New', new_address_path %></li>
    </ul>
    <div class="clear"></div>
  </div>
  <div class="content">          
    <h2 class="title"><%= yield(:title) %></h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th>ID</th>
          <th>Event Type</th>
          <th>Street1</th>
          <th>Street2</th>
          <th>City</th>
          <th>State</th>
          <th>Country</th>
          <th>Zip</th>
          <th>Lat</th>
          <th>Long</th>
          <th>Addressible</th>
          <th>Addressible Type</th>
          <th class="last" colspan="3">&nbsp;</th>
        </tr>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.id %></td>
            <td><%= address.event_type %></td>
            <td><%= address.street1 %></td>
            <td><%= address.street2 %></td>
            <td><%= address.city %></td>
            <td><%= address.state %></td>
            <td><%= address.country %></td>
            <td><%= address.zip %></td>
            <td><%= address.lat %></td>
            <td><%= address.long %></td>
            <td><%= address.addressible_id %></td>
            <td><%= address.addressible_type %></td>
            <td><%= link_to "Show", address %></td>
            <td><%= link_to "Edit", edit_address_path(address) %></td>
            <td class="last"><%= link_to "Destroy", address, :confirm => 'Are you sure?', :method => :delete %></td>
          </tr>
        <% end %>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>
      
<p><%= link_to "New Address", new_address_path %></p>

<% content_for :sidebar, render(:partial => 'sidebar') -%>