<% title "Address" %>

<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', addresses_path  %></li>
      <li><%= link_to 'New', new_address_path %></li>
      <li class="active"><%= link_to 'Show', @address %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">            
    <h2 class="title"><%= yield(:title) %></h2>
    <div class="inner">
      <p>
        <strong>Event Type:</strong>
        <%= @address.event_type %>
      </p>
      <p>
        <strong>Street1:</strong>
        <%= @address.street1 %>
      </p>
      <p>
        <strong>Street2:</strong>
        <%= @address.street2 %>
      </p>
      <p>
        <strong>City:</strong>
        <%= @address.city %>
      </p>
      <p>
        <strong>State:</strong>
        <%= @address.state %>
      </p>
      <p>
        <strong>Country:</strong>
        <%= @address.country %>
      </p>
      <p>
        <strong>Zip:</strong>
        <%= @address.zip %>
      </p>
      <p>
        <strong>Lat:</strong>
        <%= @address.lat %>
      </p>
      <p>
        <strong>Long:</strong>
        <%= @address.long %>
      </p>
      <p>
        <strong>Addressible:</strong>
        <%= @address.addressible_id %>
      </p>
      <p>
        <strong>Addressible Type:</strong>
        <%= @address.addressible_type %>
      </p>
      <p>
        <%= link_to "Edit", edit_address_path(@address) %> |
        <%= link_to "Destroy", @address, :confirm => 'Are you sure?', :method => :delete %> |
        <%= link_to "View All", addresses_path %>
      </p>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>








