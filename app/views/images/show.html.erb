
<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', images_path  %></li>
      <li><%= link_to 'New', new_image_path %></li>
      <li class="active"><%= link_to 'Show', @image %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">            
    <h2 class="title"><%= yield(:title) %></h2>
    <div class="inner">
      <p>
        <strong>Imageible:</strong>
        <%= @image.imageible_id %>
      </p>
      <p>
        <strong>Imageible Type:</strong>
        <%= @image.imageible_type %>
      </p>
      <p>
        <strong>Image File Name:</strong>
        <%= @image.image_file_name %>
      </p>
      <p>
        <strong>Image Description:</strong>
        <%= @image.image_description %>
      </p>
      <p>
        <strong>Image Content Type:</strong>
        <%= @image.image_content_type %>
      </p>
      <p>
        <strong>Image File Size:</strong>
        <%= @image.image_file_size %>
      </p>
      <p>
        <strong>Image Updated At:</strong>
        <%= @image.image_updated_at %>
      </p>
      <p>
        <%= link_to "Edit", edit_image_path(@image) %> |
        <%= link_to "Destroy", @image, :confirm => 'Are you sure?', :method => :delete %> |
        <%= link_to "View All", images_path %>
      </p>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>








