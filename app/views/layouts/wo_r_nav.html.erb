<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <% unless (yield :title).blank? || (yield :title) == t("txt.logo") %>
      <% @title = t("txt.logo") + " " + (yield :title) %>
    <% else %>
      <% @title = t("txt.logo") %>
    <% end  %>
    <title><%= @title %> </title>

    <%= stylesheet_link_tag "screen", "custom", "formtastic", "formtastic_changes", "colorbox",  :cache => "base" %>
    <%= stylesheet_link_tag "print", :media => "print" %>
    <!--[if IE]>
<style type="text/css">
  .clearfix {
    zoom: 1;     /* triggers hasLayout */
    }  /* Only IE can see inside the conditional comment
    and read this CSS rule. Don't ever use a normal HTML
    comment inside the CC or it will close prematurely. */
</style>
<![endif]-->
    <!--<link rel="stylesheet" href="css/reset.css" type="text/css" media="screen"/>-->
    <!--[if lt IE 8]><link rel="stylesheet" href="css/blueprint/ie.css" type="text/css" media="screen, projection"/><![endif]-->
    <link href='http://fonts.googleapis.com/css?family=Inconsolata' rel='stylesheet' type='text/css'></link>
    <link href='http://fonts.googleapis.com/css?family=Molengo' rel='stylesheet' type='text/css'></link>
    <%= javascript_include_tag   :defaults%>
    <script src="http://www.google.com/jsapi?key=ABQIAAAAi_F8JNAI9__oCG-KzCfTYhTJQa0g3IQ9GZqIMmInSLzwtGDKaBQ6kTvHNGROiENaALqema6YZJEh2Q" type="text/javascript"></script>
    <script language="Javascript" type="text/javascript">
      //<![CDATA[
      google.load("jquery", "1.4.2");
      google.load("jqueryui", "1.8.1");
      //]]>
    </script>
<%#= jsapi key-localhost:3000 - ABQIAAAAi_F8JNAI9__oCG-KzCfTYhTJQa0g3IQ9GZqIMmInSLzwtGDKaBQ6kTvHNGROiENaALqema6YZJEh2Q %>
<%#= javascript_include_tag "jquery"  %>
    <%= calendar_date_select_includes "silver" %>
    <script type="text/javascript">
      var $j = jQuery.noConflict();
    </script>
    <%= GMap.header %>
  </head>
  <body>
    <div id ="loading">
      <div id ="loading_inner">
        Loading...
      </div>
    </div>
    <div class="container" id="main_container">
      <div class="header span-24 last">
        <div class ="span-24 header_links_div last">
          <ul class="header_links">
            <% unless  current_user %>
              <li><%= link_to t('txt.sign_up'), new_user_path, :class => "special_link" %></li>
              <li><%= link_to t('txt.login'), login_path %></li>
            <% else %>
              <li><%= link_to current_user.username + "(" + current_role + ")", current_user %></li>
              <li><%= link_to t("txt.logout"), logout_path  %></li>
            <% end %>
          </ul>
        </div>
        <div class="last span-24 header_logo_div">
          <h1 class="header_txt"><%= link_to t('txt.logo'), root_path, :class => "logo_link"%><%= %></h1>
          <span class="logo_msg"><%= t 'txt.logo_msg' %><sup>&trade;</sup></span>
        </div>

        <div class="span-24 last  main_links_div">
          <ul class="main_links ">
            <li><%= link_to "WHAT'S NEW", root_path  %></li>
            <li><%= link_to_unless_current "MERCHANTS", merchants_path do
                link_to "merchants".upcase, merchants_path
              end%></li>
            <li><%= link_to_unless_current "EVENTS", events_path do
                link_to "EVENTS", events_path
              end%></li>
            <li><%= link_to_unless_current "BLOGS", articles_path do
                link_to "BLOGS", articles_path
              end%></li>
            <% if current_user %>
              <li><%= link_to "ACCOUNT", gaccount_path %></li>
            <% end  %>
          </ul>
        </div>
      </div>
      <div class ="span-24 last content_container bounding_border">
        <div class="content span-24 last " id="content">
          <% if flash[:notice] %>
            <div class ="notice" id ="notice"><%= flash[:notice] %></div>
          <% end  %>
          <% if flash[:success] %>
            <div class ="success" id ="success"><%= flash[:success] %></div>
          <% end  %>
          <% if flash[:error] %>
            <div class ="error" id ="error"><%= flash[:error] %>
            </div>
          <% end  %>
          <%= yield %>
        </div>
      </div>
      <%= render :partial => "/layouts/footer" %>
    </div>
  </body>
</html>
